    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"

            />

        <Button
            android:id="@+id/logout_state_btn2"
            android:layout_width="178dp"
            android:layout_height="63dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"

            android:background="@drawable/button_contur_bott_left"
            android:text="ЖИВ"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="178dp"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="666dp"
            android:layout_marginEnd="114dp"
            android:background="@drawable/button_contur_top_right"
            android:text="ЧАТ"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/logout_driv_btn"
            android:layout_width="178dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:layout_marginEnd="75dp"
            android:background="@drawable/button_contur_bott_right"
            android:text="ВЫХОД"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


    </RelativeLayout>






