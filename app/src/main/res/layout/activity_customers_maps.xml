<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.firestorerecycleradapterdemo.CustomersMapsActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />


    <RelativeLayout
        android:id="@+id/rel1"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/call_a_gamer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/phone"
            android:tint="@android:color/black"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/call_a_gamer_button"
        android:layout_width="178dp"
        android:layout_height="63dp"


        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:background="@drawable/button_contur_top_left"
        android:text="ОБНОВИТЬ"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="178dp"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="666dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/button_contur_top_right"
        android:text="ЧАТ"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/logout_customer_btn"
        android:layout_width="178dp"
        android:layout_height="63dp"

        android:layout_alignParentTop="true"

        android:layout_marginEnd="75dp"
        android:background="@drawable/button_contur_bott_right"
        android:text="ВЫХОД"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/state_btn"
        android:layout_width="178dp"
        android:layout_height="63dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:background="@drawable/button_contur_bott_left"
        android:text="ЖИВ"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


</RelativeLayout>
